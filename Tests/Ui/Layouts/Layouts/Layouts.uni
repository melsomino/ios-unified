repository Layouts

frame
	Layouts.AlbumsViewModel background-color=red
		navigation-bar bar-tint-color1=white translucent=true
			title text={artist}
				.action popover=screen-top
					button title={title} hor=center padding=20 background-color=orange color=white
			left
				menu
			right
				button title=tapme
					.action popover=screen-top
						button title=Hello hor=fill padding=20 background-color=orange color=white


fragment
	Layouts.Album
		horizontal margin=12 margin-top=25
			vertical
				text {artist} font=40 color=red
				text {title} font=20 color=gray
			text '{issued, date(MMM yyyy)}' font=12 color=gray align=top baseline-font-top=40

	Layouts.AlbumTrack
		horizontal margin=12 hor=fill
			text {title} color=e33 max-lines=3 font=20
			text {duration} font=8 color=333 hor=right baseline-font-top=20

