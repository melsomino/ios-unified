repository Layouts

frame
	Layouts.AlbumsViewModel background-color=red
		navigation-bar bar-tint-color1=white translucent=true
			left
				menu
			title text={artist}


fragment
	Layouts.Album background-color=f1f1f1
		horizontal margin=12 margin-top=25
			vertical
				text {artist} font=40 color=red
				text {title} font=20 color=gray
			text '{issued format=date(MMM yyyy)}' font=12 color=gray align=top baseline-font-top=40

	Layouts.AlbumTrack background-color=red
		horizontal margin=12
			text {title} color=e33 max-lines=3 font=20
			text {duration} font=8 color=333 align=right



frame
	Layouts.HtmlContentViewModel background-color=white
		navigation-bar 
			left
				menu
			title text=HTML

fragment
	Layouts.HtmlUrlViewModel
		vertical
			text before
			view hor=fill height=80 background-color=888
			web html='<body style="margin: 0; font-size: 25; background-color: blue">hello <b>World</b><br>1<br>2<br>3<br>Hello</body>' hor=fill initial-height=0
			view hor=fill height=10 background-color=green
			text after

	Layouts.HtmlCommentViewModel
		text {message} margin=12 padding=12 background-color=eee corner-radius=8 
			~ shadow-opacity=0.2  shadow-offset=(0 1) shadow-radius=1

